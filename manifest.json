{
    "name": "My Progressive Web App",
    "short_name": "My PWA",
    "start_url": "./index.html",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#000000",
    "icons": [
        {
            "src": "./icon-152x152.png",
            "sizes": "152x152",
            "type": "image/png"
        },		
        {
            "src": "./icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "./icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "scope": "./",  // Matches start_url's path
    "orientation": "any", // Optional, controls app's orientation
    "description": "A description of your PWA", // SEO and discoverability
    "lang": "en", // Language of the app
    "prefer_related_applications": false, // If false, prefers web app over native app if available
    "related_applications": [] // Optional, list of native app store IDs if you have related apps
}